<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:alwaysDrawnWithCache="false"
        android:background="@android:color/black" android:hapticFeedbackEnabled="true"
        android:isScrollContainer="true">


    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="To improve your standby time, press the button below. NOTE: This will have to be done ONCE after every reboot."
            android:textSize="24sp" android:textAlignment="center" android:textColor="@android:color/white"/>

    <Button
            android:text="Apply Settings"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/btnUpdateSettings"
            android:layout_alignParentBottom="true"
            android:textSize="24sp" android:visibility="visible" android:enabled="false"/>

</RelativeLayout>
